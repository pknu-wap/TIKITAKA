<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tikitaka.ProfileActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        app:titleTextColor="#ffffff"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:id="@+id/app_toolbar_profile"
        android:theme="@style/ToolbarTheme"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image_profile"
            android:layout_marginTop="150dp"
            android:src="@drawable/ic_action_account_circle_40"
            android:layout_gravity="center_horizontal"
            android:background="#ffffff"
            android:layout_width="100dp"
            android:layout_height="100dp" />

        <TextView
            android:id="@+id/textviewUserEmail"
            android:text=""
            android:fontFamily="@font/bm"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <Button
                android:id="@+id/buttonLogout"
                android:text="로그아웃"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_background_blue"
                android:fontFamily="@font/bm"
                android:textColor="#ffffff"
                 android:layout_margin="10dp"
                />

            <Button
                android:text="회원탈퇴"
                android:layout_margin="10dp"
                android:id="@+id/textviewDelete"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/btn_background_blue"
                android:textColor="#ffffff"
                android:fontFamily="@font/bm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>

